# ============================================
# VARIÁVEIS DE AMBIENTE - EXEMPLO
# ============================================
# Copie este arquivo para .env e preencha com seus valores

# ============================================
# BANCO DE DADOS
# ============================================
DATABASE_URL=mysql://username:password@localhost:3306/database_name

# ============================================
# SEGURANÇA
# ============================================
JWT_SECRET=sua_chave_secreta_muito_longa_e_aleatoria_aqui

# ============================================
# NODE.JS
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# OAUTH (Opcional - se usar autenticação)
# ============================================
VITE_OAUTH_PORTAL_URL=https://seu-oauth-provider.com
OAUTH_SERVER_URL=https://seu-oauth-provider.com
VITE_APP_ID=seu_app_id
VITE_APP_TITLE=Serralheria e Empreiteira Equilíbrio

# ============================================
# AWS S3 (Opcional - se usar upload de arquivos)
# ============================================
AWS_ACCESS_KEY_ID=sua_chave_aqui
AWS_SECRET_ACCESS_KEY=sua_chave_secreta_aqui
AWS_REGION=us-east-1
AWS_S3_BUCKET=seu_bucket_name

# ============================================
# ANALYTICS (Opcional)
# ============================================
VITE_ANALYTICS_ENDPOINT=https://seu-analytics.com
VITE_ANALYTICS_WEBSITE_ID=seu_website_id

# ============================================
# FRONTEND URLs
# ============================================
VITE_FRONTEND_FORGE_API_URL=https://api.seu-servidor.com
VITE_FRONTEND_FORGE_API_KEY=sua_chave_api
